{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "rules": {
    "indent": ["error", 4],
    "no-param-reassign": 0,
    "consistent-return": 1,
    "no-use-before-define": [1, { "variables": true }],
    "comma-dangle": ["error", "always-multiline", {
      "functions": "never"
    }]
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  }
}
